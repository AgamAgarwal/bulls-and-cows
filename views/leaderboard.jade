extends layout

block content
  table(class="zui-table zui-table-zebra" style="margin: auto; width: 60%")
    thead
      tr
        th
          p Rank
        th
          p(style="text-align:center") Name
        th
          p Time (sec)
    tbody
        each game, index in games
          tr
            td #{index+1}
            if game.user.facebook.displayName
              td #{game.user.facebook.displayName}
            else
              td #{game.user.google.displayName}
            td 
              b #{game.time}
